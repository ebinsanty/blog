<% include   ./partials/header %>
<div class="ui main text container ">
  <div class="ui huge header">
      <%= fBlog.title %>
  </div>
  <div class="ui top attached segment">
    <div class="item">
       <img  class="ui centered rounded image" src="<%= fBlog.image%>">
       <div class="content">
       <span><%= fBlog.created.toDateString()%></span>
       </div>
       <div class="description">
       <p><%= fBlog.body%></p>
       </div>
       <a class="ui inverted blue button" href="/blog/<%= fBlog._id %>/edit">Edit</a>
       <form id="delete" action="/blog/<%= fBlog._id %>?_method=DELETE" method="POST">
         <button class="ui inverted red button">DELETE</button>
       </form>
    </div>
  </div>
  
  

</div>